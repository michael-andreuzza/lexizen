---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import BaseHead from "@/components/fundations/head/BaseHead.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import PostList from "@/components/blog/PostList.astro";
// CMS
import { cms } from "@/lib/cms";
import { getMetaTitle, getMetaDescription } from "@/utils/meta";
const { slug } = Astro.params;
const { data: posts } = await cms.posts.list({ category: slug });
const { data: categories } = await cms.categories.list();
const currentCategory = categories?.find((c) => c.slug === slug);
const title = getMetaTitle(currentCategory?.name);
const description = getMetaDescription(
  `All posts in the “${currentCategory?.name?.toLowerCase()}” category`
);
---

<BaseHead title={title} description={description} />
<BaseLayout>
  <section>
    <Wrapper variant="standard" class="py-24 lg:py-32">
      <Text
        tag="p"
        variant="textXS"
        class="textXS font-mono text-base-500 capitalize"
      >
        <a href="/">home</a> / {currentCategory?.slug}</Text
      >
      <Text
        tag="h1"
        variant="displaySM"
        class="font-medium text-base-900 mt-12"
      >
        Blog
      </Text>
      <Text tag="p" variant="textBase" class="font-medium text-base-500">
        All posts in the {currentCategory?.name} category
      </Text>
      <PostList posts={posts} />
    </Wrapper>
  </section>
</BaseLayout>
