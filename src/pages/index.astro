---
// Fundatations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// CMS
import { cms } from "@/lib/cms";
// Components
import CategoryLink from "@/components/blog/CategoryLink.astro";
const { data: posts } = await cms.posts.list();
const { data: categories } = await cms.categories.list();
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-24 lg:pt-32">
      <Text tag="h1" variant="displaySM"> Welcome to Lexizen </Text>
    </Wrapper>
  </section>
  <section>
    <Wrapper variant="standard" class="py-12">
      <div class="grid grid-cols-1 md:grid-cols-2">
        <Text tag="p" variant="textBase"> Read my blog </Text>
        <Button
          isLink={true}
          size="xs"
          variant="muted"
          href="/blog"
          class="w-fit lg:ml-auto">See latest blog posts</Button
        >
      </div>
      <div class="flex gap-4 flex-wrap">
        {
          categories?.map((category) => (
            <CategoryLink href={`/blog/categories/${category.slug}/`}>
              {category.name}
            </CategoryLink>
          ))
        }
      </div>
      <ul class="grid grid-cols-1 md:grid-cols-3 gap-12 mt-12">
        {
          posts?.slice(0, 3).map((post) => (
            <li>
              <a href={`/blog/${post.slug}/`} class="block">
                {post.cover_image ? (
                  <img
                    width={720}
                    height={360}
                    src={post.cover_image}
                    alt={post.title}
                    class="w-full object-cover aspect-12/6"
                  />
                ) : (
                  <div class="h-[360px] bg-base-50" />
                )}
                <div class="mt-2">
                  <Text
                    tag="p"
                    variant="textXS"
                    class="font-medium font-mono text-base-500"
                  >
                    <time datetime={post.published_at}>
                      {new Date(post.published_at).toLocaleDateString("en-US", {
                        year: "numeric",
                        month: "long",
                        day: "numeric",
                      })}
                    </time>
                  </Text>
                  <Text
                    tag="h3"
                    variant="textBase"
                    class="font-medium text-base-900 mt-4"
                  >
                    {post.title}
                  </Text>
                  <Text
                    tag="p"
                    variant="textSM"
                    class="text-base-500 line-clamp-2 mt-1"
                  >
                    {post.excerpt}
                  </Text>
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </Wrapper>
  </section>
</BaseLayout>
