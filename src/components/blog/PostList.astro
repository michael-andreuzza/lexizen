---
import type { Post } from "zenblog/types";
import BlogCard from "@/components/blog/CategoriesCard.astro";
interface Props {
  posts: Post[];
}
const { posts } = Astro.props;
---

<ul
  role="list"
  class="grid grid-cols-1 md:grid-cols-3 gap-8 gap-y-24 mt-4 list-none"
>
  {posts?.map((post) => <BlogCard post={post} />)}
</ul>
